<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaceDetectionActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:id="@+id/SelectButton"
        android:background="@null"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView"
        android:src="@drawable/phenhjdo8w2qbwe"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_below="@id/imageView"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lefteye"
        android:text="Left Eye"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_below="@id/lefteye"
            android:layout_marginTop="10dp"
            android:id="@+id/righteye"
            android:layout_height="wrap_content"
            android:text="Righr Eye"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/righteye"
            android:id="@+id/smile"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Smile"/>
    </RelativeLayout>

</RelativeLayout>